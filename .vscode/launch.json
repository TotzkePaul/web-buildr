    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell: Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "build.ps1",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Launch via NPM",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Build",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "start"
            ]
        }
    ]
}